<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.session.mapper.SessionMapper">

    <!-- 仅保留sam_competition_session单表的结果映射，包含tags字段，字段映射无变动 -->
    <resultMap type="Session" id="SessionResult">
        <result property="id"           column="session_id"    />
        <result property="competitionId" column="competition_id" />
        <result property="session"      column="session"       />
        <result property="category"     column="category"      />
        <result property="organizations" column="organizations" />
        <result property="level"        column="level"         />
        <result property="tags"         column="tags"          />
        <result property="status"       column="status"        />
        <result property="createBy"     column="create_by"     />
        <result property="createTime"   column="create_time"   />
        <result property="updateBy"     column="update_by"     />
        <result property="updateTime"   column="update_time"   />
        <result property="remark"       column="remark"        />
        <result property="delFlag"      column="del_flag"      />
    </resultMap>

    <!-- sam_competition_session单表查询公共SQL：仅修改表名 -->
    <sql id="selectSessionVo">
        select session_id, competition_id, session, category, organizations, level, status, tags,
        create_by, create_time, update_by, update_time, remark, del_flag
        from sam_competition_session
    </sql>

    <!-- 列表查询：单表，保留tags字段筛选，表名随公共SQL变动 -->
    <select id="selectSessionList" parameterType="Session" resultMap="SessionResult">
        <include refid="selectSessionVo"/>
        <where>
            <if test="competitionId != null "> and competition_id = #{competitionId}</if>
            <if test="session != null  and session != ''"> and session = #{session}</if>
            <if test="category != null  and category != ''"> and category = #{category}</if>
            <if test="organizations != null  and organizations != ''"> and organizations like concat('%', #{organizations}, '%')</if>
            <if test="level != null  and level != ''"> and level = #{level}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>

    <!-- 单条查询：移除子表关联，直接用基础SessionResult，表名随公共SQL变动 -->
    <select id="selectSessionById" parameterType="Long" resultMap="SessionResult">
        <include refid="selectSessionVo"/>
        where session_id = #{id}
    </select>

    <!-- 新增：保留tags字段插入，单表操作，仅修改表名 -->
    <insert id="insertSession" parameterType="Session" useGeneratedKeys="true" keyProperty="id">
        insert into sam_competition_session
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="competitionId != null">competition_id,</if>
            <if test="session != null and session != ''">session,</if>
            <if test="category != null and category != ''">category,</if>
            <if test="organizations != null and organizations != ''">organizations,</if>
            <if test="level != null">level,</if>
            <if test="status != null">status,</if>
            <if test="tags != null">tags,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
            <if test="delFlag != null">del_flag,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="competitionId != null">#{competitionId},</if>
            <if test="session != null and session != ''">#{session},</if>
            <if test="category != null and category != ''">#{category},</if>
            <if test="organizations != null and organizations != ''">#{organizations},</if>
            <if test="level != null">#{level},</if>
            <if test="status != null">#{status},</if>
            <if test="tags != null">#{tags},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
            <if test="delFlag != null">#{delFlag},</if>
        </trim>
    </insert>

    <!-- 修改：保留tags字段更新，单表操作，仅修改表名 -->
    <update id="updateSession" parameterType="Session">
        update sam_competition_session
        <trim prefix="SET" suffixOverrides=",">
            <if test="competitionId != null">competition_id = #{competitionId},</if>
            <if test="session != null and session != ''">session = #{session},</if>
            <if test="category != null and category != ''">category = #{category},</if>
            <if test="organizations != null and organizations != ''">organizations = #{organizations},</if>
            <if test="level != null">level = #{level},</if>
            <if test="status != null">status = #{status},</if>
            <if test="tags != null">tags = #{tags},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where session_id = #{id}
    </update>

    <!-- 单条删除：单表操作，仅修改表名 -->
    <delete id="deleteSessionById" parameterType="Long">
        delete from sam_competition_session where session_id = #{id}
    </delete>

    <!-- 批量删除：单表操作，仅修改表名 -->
    <delete id="deleteSessionByIds" parameterType="String">
        delete from sam_competition_session where session_id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>