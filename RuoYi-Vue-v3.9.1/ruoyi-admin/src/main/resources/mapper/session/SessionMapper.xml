<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.session.mapper.SessionMapper">

    <!-- 关键修改1：新增competitionName字段映射，解决赛事名称导出为空 -->
    <resultMap type="Session" id="SessionResult">
        <result property="id"           column="session_id"    />
        <result property="competitionId" column="competition_id" />
        <!-- 新增：映射赛事名称（从competition表关联查询的name字段） -->
        <result property="competitionName" column="competition_name" />
        <result property="session"      column="session"       />
        <result property="category"     column="category"      />
        <result property="organizations" column="organizations" />
        <result property="level"        column="level"         />
        <result property="tags"         column="tags"          />
        <result property="status"       column="status"        />
        <result property="createBy"     column="create_by"     />
        <result property="createTime"   column="create_time"   />
        <result property="updateBy"     column="update_by"     />
        <result property="updateTime"   column="update_time"   />
        <result property="remark"       column="remark"        />
        <result property="delFlag"      column="del_flag"      />
    </resultMap>

    <!-- 关键修改2：公共SQL关联competition表，查询赛事名称 -->
    <sql id="selectSessionVo">
        select s.session_id, s.competition_id, c.name as competition_name,
        s.session, s.category, s.organizations, s.level, s.status, s.tags,
        s.create_by, s.create_time, s.update_by, s.update_time, s.remark, s.del_flag
        from sam_competition_session s
        <!-- 左关联赛事主表（替换成你的competition表名，比如sam_competition） -->
        left join sam_competition c on s.competition_id = c.id
    </sql>

    <!-- 列表查询：保留原有筛选条件，新增赛事名称模糊查询 -->
    <select id="selectSessionList" parameterType="Session" resultMap="SessionResult">
        <include refid="selectSessionVo"/>
        <where>
            s.del_flag = '0' <!-- 新增：只查询未删除的数据，重复校验更严谨 -->
            <if test="competitionId != null "> and s.competition_id = #{competitionId}</if>
            <if test="competitionName != null and competitionName != ''">
                and c.name like concat('%', #{competitionName}, '%')
            </if>
            <if test="session != null  and session != ''"> and s.session = #{session}</if>
            <if test="category != null  and category != ''"> and s.category = #{category}</if>
            <if test="organizations != null  and organizations != ''"> and s.organizations like concat('%', #{organizations}, '%')</if>
            <if test="level != null  and level != ''"> and s.level = #{level}</if>
            <if test="status != null  and status != ''"> and s.status = #{status}</if>
        </where>
    </select>

    <!-- 单条查询：关联competition表，获取赛事名称 -->
    <select id="selectSessionById" parameterType="Long" resultMap="SessionResult">
        <include refid="selectSessionVo"/>
        where s.session_id = #{id} and s.del_flag = '0'
    </select>

    <!-- 以下增删改操作完全保留，无需改动 -->
    <insert id="insertSession" parameterType="Session" useGeneratedKeys="true" keyProperty="id">
        insert into sam_competition_session
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="competitionId != null">competition_id,</if>
            <if test="session != null and session != ''">session,</if>
            <if test="category != null and category != ''">category,</if>
            <if test="organizations != null and organizations != ''">organizations,</if>
            <if test="level != null">level,</if>
            <if test="status != null">status,</if>
            <if test="tags != null">tags,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
            <if test="delFlag != null">del_flag,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="competitionId != null">#{competitionId},</if>
            <if test="session != null and session != ''">#{session},</if>
            <if test="category != null and category != ''">#{category},</if>
            <if test="organizations != null and organizations != ''">#{organizations},</if>
            <if test="level != null">#{level},</if>
            <if test="status != null">#{status},</if>
            <if test="tags != null">#{tags},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
            <if test="delFlag != null">#{delFlag},</if>
        </trim>
    </insert>

    <update id="updateSession" parameterType="Session">
        update sam_competition_session
        <trim prefix="SET" suffixOverrides=",">
            <if test="competitionId != null">competition_id = #{competitionId},</if>
            <if test="session != null and session != ''">session = #{session},</if>
            <if test="category != null and category != ''">category = #{category},</if>
            <if test="organizations != null and organizations != ''">organizations = #{organizations},</if>
            <if test="level != null">level = #{level},</if>
            <if test="status != null">status = #{status},</if>
            <if test="tags != null">tags = #{tags},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where session_id = #{id}
    </update>

    <delete id="deleteSessionById" parameterType="Long">
        delete from sam_competition_session where session_id = #{id}
    </delete>

    <delete id="deleteSessionByIds" parameterType="Long[]">
        delete from sam_competition_session where session_id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>