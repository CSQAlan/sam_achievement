<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.erp.mapper.ErpTeacherMapper">
    
    <resultMap type="ErpTeacher" id="ErpTeacherResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="teacherCode"    column="teacher_code"    />
        <result property="name"    column="name"    />
        <result property="deptId"    column="dept_id"    />
        <result property="title"    column="title"    />
        <result property="phone"    column="phone"    />
        <result property="status"    column="status"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectErpTeacherVo">
        select id, user_id, teacher_code, name, dept_id, title, phone, status, del_flag, create_by, create_time, update_by, update_time, remark from erp_teacher
    </sql>

    <select id="selectErpTeacherList" parameterType="ErpTeacher" resultMap="ErpTeacherResult">
        <include refid="selectErpTeacherVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="teacherCode != null  and teacherCode != ''"> and teacher_code = #{teacherCode}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="deptId != null "> and dept_id = #{deptId}</if>
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="phone != null  and phone != ''"> and phone = #{phone}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectErpTeacherById" parameterType="Long" resultMap="ErpTeacherResult">
        <include refid="selectErpTeacherVo"/>
        where id = #{id}
    </select>

    <insert id="insertErpTeacher" parameterType="ErpTeacher" useGeneratedKeys="true" keyProperty="id">
        insert into erp_teacher
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="teacherCode != null and teacherCode != ''">teacher_code,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="deptId != null">dept_id,</if>
            <if test="title != null">title,</if>
            <if test="phone != null">phone,</if>
            <if test="status != null">status,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="teacherCode != null and teacherCode != ''">#{teacherCode},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="deptId != null">#{deptId},</if>
            <if test="title != null">#{title},</if>
            <if test="phone != null">#{phone},</if>
            <if test="status != null">#{status},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateErpTeacher" parameterType="ErpTeacher">
        update erp_teacher
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="teacherCode != null and teacherCode != ''">teacher_code = #{teacherCode},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="title != null">title = #{title},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="status != null">status = #{status},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteErpTeacherById" parameterType="Long">
        delete from erp_teacher where id = #{id}
    </delete>

    <delete id="deleteErpTeacherByIds" parameterType="String">
        delete from erp_teacher where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>