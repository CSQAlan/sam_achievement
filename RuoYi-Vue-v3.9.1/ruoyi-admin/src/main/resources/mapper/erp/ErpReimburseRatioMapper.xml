<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.erp.mapper.ErpReimburseRatioMapper">
    
    <resultMap type="ErpReimburseRatio" id="ErpReimburseRatioResult">
        <result property="id"    column="id"    />
        <result property="deptId"    column="dept_id"    />
        <result property="category"    column="category"    />
        <result property="awardLevel"    column="award_level"    />
        <result property="ratio"    column="ratio"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectErpReimburseRatioVo">
        select id, dept_id, category, award_level, ratio, del_flag, create_by, create_time, update_by, update_time, remark from erp_reimburse_ratio
    </sql>

    <select id="selectErpReimburseRatioList" parameterType="ErpReimburseRatio" resultMap="ErpReimburseRatioResult">
        <include refid="selectErpReimburseRatioVo"/>
        <where>  
            <if test="deptId != null "> and dept_id like concat('%', #{deptId}, '%')</if>
            <if test="category != null  and category != ''"> and category like concat('%', #{category}, '%')</if>
            <if test="awardLevel != null  and awardLevel != ''"> and award_level like concat('%', #{awardLevel}, '%')</if>
        </where>
    </select>
    
    <select id="selectErpReimburseRatioById" parameterType="Long" resultMap="ErpReimburseRatioResult">
        <include refid="selectErpReimburseRatioVo"/>
        where id = #{id}
    </select>

    <insert id="insertErpReimburseRatio" parameterType="ErpReimburseRatio" useGeneratedKeys="true" keyProperty="id">
        insert into erp_reimburse_ratio
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="deptId != null">dept_id,</if>
            <if test="category != null and category != ''">category,</if>
            <if test="awardLevel != null and awardLevel != ''">award_level,</if>
            <if test="ratio != null">ratio,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="deptId != null">#{deptId},</if>
            <if test="category != null and category != ''">#{category},</if>
            <if test="awardLevel != null and awardLevel != ''">#{awardLevel},</if>
            <if test="ratio != null">#{ratio},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateErpReimburseRatio" parameterType="ErpReimburseRatio">
        update erp_reimburse_ratio
        <trim prefix="SET" suffixOverrides=",">
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="category != null and category != ''">category = #{category},</if>
            <if test="awardLevel != null and awardLevel != ''">award_level = #{awardLevel},</if>
            <if test="ratio != null">ratio = #{ratio},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteErpReimburseRatioById" parameterType="Long">
        delete from erp_reimburse_ratio where id = #{id}
    </delete>

    <delete id="deleteErpReimburseRatioByIds" parameterType="String">
        delete from erp_reimburse_ratio where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>