<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.competition.mapper.CompetitionMapper">
    
    <resultMap type="Competition" id="CompetitionResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="category"    column="category"    />
        <result property="organizations"    column="organizations"    />
        <result property="tags"    column="tags"    />
        <result property="scopeType"    column="scope_type"    />
        <result property="status"    column="status"    />
        <result property="memo"    column="memo"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <resultMap id="CompetitionCompetitionDeptRelResult" type="Competition" extends="CompetitionResult">
        <collection property="competitionDeptRelList" ofType="CompetitionDeptRel" column="id" select="selectCompetitionDeptRelList" />
    </resultMap>

    <resultMap type="CompetitionDeptRel" id="CompetitionDeptRelResult">
        <result property="id"    column="id"    />
        <result property="sessionId"    column="session_id"    />
        <result property="deptId"    column="dept_id"    />
        <result property="sort"    column="sort"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectCompetitionVo">
        select id, name, category, organizations, tags, scope_type, status, memo, create_by, create_time, update_by, update_time, remark, del_flag from competition
    </sql>

    <select id="selectCompetitionList" parameterType="Competition" resultMap="CompetitionResult">
        <include refid="selectCompetitionVo"/>
        <where>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="category != null  and category != ''"> and category like concat('%', #{category}, '%')</if>
            <if test="organizations != null  and organizations != ''"> and organizations = #{organizations}</if>
            <if test="tags != null  and tags != ''"> and tags like concat('%', #{tags}, '%')</if>
            <if test="scopeType != null  and scopeType != ''"> and scope_type = #{scopeType}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>

    <select id="selectCompetitionById" parameterType="Long" resultMap="CompetitionCompetitionDeptRelResult">
        select id, name, category, organizations, tags, scope_type, status, memo, create_by, create_time, update_by, update_time, remark, del_flag
        from competition
        where id = #{id}
    </select>

    <select id="selectCompetitionDeptRelList" resultMap="CompetitionDeptRelResult">
        select id, session_id, dept_id, sort, create_by, create_time, update_by, update_time, remark, del_flag
        from competition_dept_rel
        where session_id = #{session_id}
    </select>


    <insert id="insertCompetition" parameterType="Competition" useGeneratedKeys="true" keyProperty="id">
        insert into competition
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="category != null and category != ''">category,</if>
            <if test="organizations != null and organizations != ''">organizations,</if>
            <if test="tags != null">tags,</if>
            <if test="scopeType != null">scope_type,</if>
            <if test="status != null">status,</if>
            <if test="memo != null">memo,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="category != null and category != ''">#{category},</if>
            <if test="organizations != null and organizations != ''">#{organizations},</if>
            <if test="tags != null">#{tags},</if>
            <if test="scopeType != null">#{scopeType},</if>
            <if test="status != null">#{status},</if>
            <if test="memo != null">#{memo},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
            <if test="delFlag != null">#{delFlag},</if>
         </trim>
    </insert>

    <update id="updateCompetition" parameterType="Competition">
        update competition
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="category != null and category != ''">category = #{category},</if>
            <if test="organizations != null and organizations != ''">organizations = #{organizations},</if>
            <if test="tags != null">tags = #{tags},</if>
            <if test="scopeType != null">scope_type = #{scopeType},</if>
            <if test="status != null">status = #{status},</if>
            <if test="memo != null">memo = #{memo},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCompetitionById" parameterType="Long">
        delete from competition where id = #{id}
    </delete>

    <delete id="deleteCompetitionByIds" parameterType="String">
        delete from competition where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
    <delete id="deleteCompetitionDeptRelBySessionIds" parameterType="String">
        delete from competition_dept_rel where session_id in 
        <foreach item="sessionId" collection="array" open="(" separator="," close=")">
            #{sessionId}
        </foreach>
    </delete>

    <delete id="deleteCompetitionDeptRelBySessionId" parameterType="Long">
        delete from competition_dept_rel where session_id = #{sessionId}
    </delete>

    <insert id="batchCompetitionDeptRel">
        insert into competition_dept_rel( id, session_id, dept_id, sort, create_by, create_time, update_by, update_time, remark, del_flag) values
        <foreach item="item" index="index" collection="list" separator=",">
            ( #{item.id}, #{item.sessionId}, #{item.deptId}, #{item.sort}, #{item.createBy}, #{item.createTime}, #{item.updateBy}, #{item.updateTime}, #{item.remark}, #{item.delFlag})
        </foreach>
    </insert>
</mapper>