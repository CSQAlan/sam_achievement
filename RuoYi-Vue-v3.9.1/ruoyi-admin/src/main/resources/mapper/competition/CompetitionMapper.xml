<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.competition.mapper.CompetitionMapper">

    <resultMap type="Competition" id="CompetitionResult">
        <result property="id"         column="id"          />
        <result property="name"       column="name"        />
        <result property="category"   column="category"    />
        <result property="organizations" column="organizations"/>
        <result property="tags"       column="tags"        />
        <result property="scopeType"  column="scope_type"  />
        <result property="status"     column="status"      />
        <result property="memo"       column="memo"        />
        <result property="createBy"   column="create_by"   />
        <result property="createTime" column="create_time" />
        <result property="updateBy"   column="update_by"   />
        <result property="updateTime" column="update_time" />
        <result property="delFlag"    column="del_flag"    />
        <!-- 主表remark已删，移除该映射 -->
    </resultMap>

    <resultMap id="CompetitionCompetitionDeptRelResult" type="Competition" extends="CompetitionResult">
        <collection property="competitionDeptRelList" ofType="CompetitionDeptRel" column="id" select="selectCompetitionDeptRelList" />
    </resultMap>

    <resultMap type="CompetitionDeptRel" id="CompetitionDeptRelResult">
        <result property="id"         column="id"          />
        <result property="sessionId"  column="session_id"  />
        <result property="deptId"     column="dept_id"     />
        <result property="sort"       column="sort"        />
        <result property="createBy"   column="create_by"   />
        <result property="createTime" column="create_time" />
        <result property="updateBy"   column="update_by"   />
        <result property="updateTime" column="update_time" />
        <result property="remark"     column="remark"      />
        <result property="delFlag"    column="del_flag"    />
        <!-- 子表remark保留，映射不变 -->
    </resultMap>

    <!-- 1. 主表名：competition → sam_competition，已移除remark字段 -->
    <sql id="selectCompetitionVo">
        select id, name, category, organizations, tags, scope_type, status, memo, create_by, create_time, update_by, update_time, del_flag from sam_competition
    </sql>

    <select id="selectCompetitionList" parameterType="Competition" resultMap="CompetitionResult">
        <include refid="selectCompetitionVo"/>
        <where>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="category != null  and category != ''"> and category like concat('%', #{category}, '%')</if>
            <if test="organizations != null  and organizations != ''"> and organizations = #{organizations}</if>
            <if test="tags != null  and tags != ''"> and tags like concat('%', #{tags}, '%')</if>
            <if test="scopeType != null  and scopeType != ''"> and scope_type = #{scopeType}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>

    <!-- 2. 主表单查：删除SQL中的remark字段（解决本次核心报错） -->
    <select id="selectCompetitionById" parameterType="Long" resultMap="CompetitionCompetitionDeptRelResult">
        select id, name, category, organizations, tags, scope_type, status, memo, create_by, create_time, update_by, update_time, del_flag
        from sam_competition
        where id = #{id}
    </select>

    <!-- 3. 子表查询：保留remark字段，SQL不变 -->
    <select id="selectCompetitionDeptRelList" resultMap="CompetitionDeptRelResult">
        select id, session_id, dept_id, sort, create_by, create_time, update_by, update_time, remark, del_flag
        from sam_competition_dept_rel
        where session_id = #{session_id}
    </select>

    <!-- 4. 主表新增：删除remark相关插入逻辑 -->
    <insert id="insertCompetition" parameterType="Competition" useGeneratedKeys="true" keyProperty="id">
        insert into sam_competition
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="category != null and category != ''">category,</if>
            <if test="organizations != null and organizations != ''">organizations,</if>
            <if test="tags != null">tags,</if>
            <if test="scopeType != null">scope_type,</if>
            <if test="status != null">status,</if>
            <if test="memo != null">memo,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="delFlag != null">del_flag,</if>
            <!-- 主表remark已删，移除该字段 -->
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="category != null and category != ''">#{category},</if>
            <if test="organizations != null and organizations != ''">#{organizations},</if>
            <if test="tags != null">#{tags},</if>
            <if test="scopeType != null">#{scopeType},</if>
            <if test="status != null">#{status},</if>
            <if test="memo != null">#{memo},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <!-- 主表remark已删，移除该值 -->
        </trim>
    </insert>

    <!-- 5. 主表修改：删除remark相关更新逻辑 -->
    <update id="updateCompetition" parameterType="Competition">
        update sam_competition
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="category != null and category != ''">category = #{category},</if>
            <if test="organizations != null and organizations != ''">organizations = #{organizations},</if>
            <if test="tags != null">tags = #{tags},</if>
            <if test="scopeType != null">scope_type = #{scopeType},</if>
            <if test="status != null">status = #{status},</if>
            <if test="memo != null">memo = #{memo},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <!-- 主表remark已删，移除该字段 -->
        </trim>
        where id = #{id}
    </update>

    <!-- 6. 主表单删：无remark，无需修改 -->
    <delete id="deleteCompetitionById" parameterType="Long">
        delete from sam_competition where id = #{id}
    </delete>

    <!-- 7. 主表批量删：无remark，无需修改 -->
    <delete id="deleteCompetitionByIds" parameterType="String">
        delete from sam_competition where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 8. 子表批量删：无remark，无需修改 -->
    <delete id="deleteCompetitionDeptRelBySessionIds" parameterType="String">
        delete from sam_competition_dept_rel where session_id in
        <foreach item="sessionId" collection="array" open="(" separator="," close=")">
            #{sessionId}
        </foreach>
    </delete>

    <!-- 9. 子表单删：无remark，无需修改 -->
    <delete id="deleteCompetitionDeptRelBySessionId" parameterType="Long">
        delete from sam_competition_dept_rel where session_id = #{sessionId}
    </delete>

    <!-- 10. 子表批量新增：保留remark字段，SQL不变 -->
    <insert id="batchCompetitionDeptRel">
        insert into sam_competition_dept_rel( id, session_id, dept_id, sort, create_by, create_time, update_by, update_time, remark, del_flag) values
        <foreach item="item" index="index" collection="list" separator=",">
            ( #{item.id}, #{item.sessionId}, #{item.deptId}, #{item.sort}, #{item.createBy}, #{item.createTime}, #{item.updateBy}, #{item.updateTime}, #{item.remark}, #{item.delFlag})
        </foreach>
    </insert>

</mapper>